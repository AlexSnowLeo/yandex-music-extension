{
  "name": "yandex-music-extension",
  "displayName": "yandex-music-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.helloWorld",
    "onView:yandex-music-play-lists"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Yandex Music",
      "properties": {
        "yandexMusic.credentials.username": {
          "description": "Yandex Music user name",
          "type": "string",
          "scope": "application"
        },
        "yandexMusic.credentials.password": {
          "description": "Yandex Music password",
          "type": "string",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "yandexMusic.playTrack",
        "title": "Play Track"
      },
      {
        "command": "yandexMusic.stopTrack",
        "title": "Stop track",
        "icon": {
          "dark": "resources/dark/track-stop.svg",
          "light": "resources/light/track-stop.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "yandexMusic.stopTrack",
          "group": "navigation"          
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yandex-music-explorer",
          "title": "Yandex Music",
          "icon": "resources/megaphone.svg"
        }
      ]
    },
    "views": {
      "yandex-music-explorer": [
        {
          "id": "yandex-music-play-lists",
          "name": "Yandex Music Play Lists"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "crypto": "^1.0.1",
    "play-sound": "^1.1.3"
  }
}
