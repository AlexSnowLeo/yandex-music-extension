{
  "name": "yandex-music-extension",
  "displayName": "yandex-music-extension",
  "publisher": "Cherkashin Alexander",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:yandex-music-play-lists"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Yandex Music",
      "properties": {
        "yandexMusic.credentials.username": {
          "description": "Yandex Music user name",
          "type": "string",
          "scope": "application"
        },
        "yandexMusic.credentials.password": {
          "description": "Yandex Music password",
          "type": "string",
          "scope": "application"
        },
        "yandexMusic.rewindTime": {
          "description": "Rewind time (sec)",
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 60,
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "yandexMusic.play",
        "title": "Play Track"
      },
      {
        "command": "yandexMusic.pause",
        "title": "Play Track"
      },
      {
        "command": "yandexMusic.next",
        "title": "Next Track"
      },
      {
        "command": "yandexMusic.prev",
        "title": "Previous Track"
      },
      {
        "command": "yandexMusic.rewindForward",
        "title": "Rewind Track Forward"
      },
      {
        "command": "yandexMusic.rewindBackward",
        "title": "Rewind Track Backward"
      },
      {
        "command": "yandexMusic.downloadTrack",
        "title": "Download Track",
        "icon": "$(cloud-download)"
      },
      {
        "command": "yandexMusic.connect",
        "title": "Connect to YandexMusic account",
        "icon": "$(account)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "yandexMusic.downloadTrack",
          "group": "inline",
          "when": "viewItem == track"
        }
      ]
    },
    "keybindings": [
      {
        "command": "yandexMusic.play",
        "win": "alt+shift+p",
        "mac": "alt+shift+p",
        "linux": "alt+shift+p",
        "when": "!yandexMusic.isPlaying"
      },
      {
        "command": "yandexMusic.pause",
        "win": "alt+shift+p",
        "mac": "alt+shift+p",
        "linux": "alt+shift+p",
        "when": "yandexMusic.isPlaying"
      },
      {
        "command": "yandexMusic.next",
        "win": "alt+shift+n",
        "mac": "alt+shift+n",
        "linux": "alt+shift+n",
        "when": "yandexMusic.isPlaying"
      },
      {
        "command": "yandexMusic.prev",
        "win": "alt+shift+b",
        "mac": "alt+shift+b",
        "linux": "alt+shift+b",
        "when": "yandexMusic.isPlaying"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yandex-music-explorer",
          "title": "Yandex Music",
          "icon": "resources/megaphone.svg"
        }
      ]
    },
    "views": {
      "yandex-music-explorer": [
        {
          "id": "yandex-music-play-lists",
          "name": "Yandex Music Play Lists"
        },
        {
          "id": "yandex-music-chart",
          "name": "Chart"
        },
        {
          "id": "yandex-music-recommendations",
          "name": "Recommendations"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "crypto": "^1.0.1",
    "electron": "^8.2.5",
    "mobx": "^5.15.4",
    "open": "^7.0.3",
    "valid-url": "^1.0.9"
  }
}
